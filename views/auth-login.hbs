{{#> layout currentPage='Login'}}
<!-- REGISTER PAGE -->
<main class="container-md mt-5 d-flex justify-content-center" style="min-height: 100vh;">

    <form class="login-form w-50" action="/login" method="post">
        <h1 class="text-center mb-4">Login</h1>

        <!-- Email Input -->
        <div class="form-group mb-3">
            <label for="username" class="form-label">Username</label>
            <input type="username" name="username" id="username" class="form-control" placeholder="Enter your username" required>
        </div>

        <!-- Password Input -->
        <div class="form-group mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" name="password" id="password" class="form-control" placeholder="Enter password" required>
        </div>

         {{!-- pesan error --}}
        {{#if messages.error}}
        <div class="alert alert-danger" role="alert">
            {{messages.error}}
        </div>
        {{/if}}

        {{!-- pesan sukses --}}
        {{#if messages.success}}
        <div class="alert alert-success" role="alert">
            {{messages.success}}
        </div>
        {{/if}}

        <!-- Register Button -->
        <div class="text-center">
            <button type="submit" class="btn login-btn w-100">Login</button>
        </div>
    </form>
</main>

<!-- Custom Styling -->
<style>
    .login-btn {
        background-color: cornflowerblue;
        color: white;
        font-size: 1rem;
        padding: 10px;
        border: none;
        border-radius: 5px;
    }

    .form-control {
        border: 1px solid grey; /* Plain grey border */
        border-radius: 5px;
        padding: 10px;
        font-size: 1rem;
    }

    .form-control:focus {
        border: 1px solid grey; /* Keeps border grey on focus */
        box-shadow: none; /* Removes default blue glow on focus */
    }
</style>

{{/layout}}
